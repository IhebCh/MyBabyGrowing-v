<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/all_bg_blur" />

    <RelativeLayout
        android:id="@id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/phone_top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_background">

        <Button
            android:id="@id/topInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/phone_top_left_btn_mrgn_left"
            android:text="@string/i_btn"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@id/topHeading"
            android:layout_width="@dimen/phone_heading_width_big"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="أرقام الهاتف"
            android:textColor="#ffffffff"
            android:textSize="@dimen/heading_phone" />

        <Button
            android:id="@id/plusBtn"
            android:layout_width="@dimen/ph_top_label_width_other"
            android:layout_height="@dimen/ph_top_label_width_small"
            android:layout_alignParentRight="true"

            android:layout_marginRight="@dimen/phone_top_right_btn_mrgn_right"
            android:background="@drawable/plus_icon" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/myQuestionsLayout"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/topLayout">

        <TextView
            android:id="@id/nutrition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10.0dip"
            android:ellipsize="end"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:singleLine="true"
            android:text="إضغطي لإضافة رقم جديد"
            android:textColor="#ff5a5a5a"
            android:textSize="22.0sp" />
    </RelativeLayout>
    <View
        android:id="@id/secondSeparator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/myQuestionsLayout"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/myQuestionsLayout_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondSeparator"
        android:background="@drawable/email_input">
        <RelativeLayout
            android:id="@id/forthLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/englishLayout"
            android:background="@drawable/square"
            android:padding="5.0dip">

            <TextView
                android:id="@id/fourth_imgid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:background="@drawable/phone_icon"
                android:gravity="center"
                android:text="جانفي \n03"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:layout_toRightOf="@id/disclosuretriangle"
                android:layout_toLeftOf="@id/fourth_imgid">

                <TextView
                    android:id="@id/dueDate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"

                    android:text="الدكتور رواغى سليمان"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/duedatedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dueDate_title"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"

                    android:text="036551381"
                    android:textColor="#ff5dcbda"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <ImageView
                android:id="@id/disclosuretriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/discloure" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@id/thirdSeparator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/myQuestionsLayout_"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/_myQuestionsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdSeparator"
        android:background="@drawable/email_input">
        <RelativeLayout
            android:id="@id/forthLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/englishLayout"
            android:background="@drawable/square"
            android:padding="5.0dip">

            <TextView
                android:id="@id/fourth_imgid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:background="@drawable/phone_icon"
                android:gravity="center"
                android:text="جانفي \n03"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:layout_toRightOf="@id/disclosuretriangle"
                android:layout_toLeftOf="@id/fourth_imgid">

                <TextView
                    android:id="@id/dueDate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"

                    android:text="الدكتور محمد علي"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/duedatedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dueDate_title"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"

                    android:text="021365249"
                    android:textColor="#ff5dcbda"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <ImageView
                android:id="@id/disclosuretriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/discloure" />
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:id="@id/fourthSeparator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/_myQuestionsLayout"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/__myQuestionsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourthSeparator"
        android:background="@drawable/email_input">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/email_input">
            <RelativeLayout
                android:id="@id/forthLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/englishLayout"
                android:background="@drawable/square"
                android:padding="5.0dip">

                <TextView
                    android:id="@id/fourth_imgid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/phone_icon"
                    android:gravity="center"
                    android:text="جانفي \n03"
                    android:textColor="#ffffffff"
                    android:textSize="12.0sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5.0dip"
                    android:layout_toRightOf="@id/disclosuretriangle"
                    android:layout_toLeftOf="@id/fourth_imgid">

                    <TextView
                        android:id="@id/dueDate_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_alignParentRight="true"

                        android:text="الدكتورة سليمة حداد"
                        android:textColor="#ff5a5a5a"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@id/duedatedesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dueDate_title"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"

                        android:text="0352689546"
                        android:textColor="#ff5dcbda"
                        android:textSize="14.0sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@id/disclosuretriangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/discloure" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
