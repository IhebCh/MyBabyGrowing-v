<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/all_bg_blur">

    <RelativeLayout
        android:id="@id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/phone_top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_background">

        <TextView
            android:id="@id/topHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="أسماء"
            android:textColor="#ffffffff"
            android:textSize="@dimen/heading_phone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/sortLayout"
        android:background="@drawable/email_input"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_gravity="left|center"
                android:padding="5.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_toLeftOf="@id/toggleBtnLayout"
                android:layout_alignParentLeft="true">
            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="right|center"
                android:id="@id/toggleBtnLayout"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:layout_alignParentRight="true">

                <ToggleButton
                    android:id="@id/topOrAtoZ"
                    android:background="@drawable/switch_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="5.0dip"
                    android:textOn=""
                    android:textOff=""
                    android:layout_alignParentRight="true" />

                <ToggleButton
                    android:id="@id/boyOrGirl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/topOrAtoZ"
                    android:background="@drawable/switch_boy"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@id/firstSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/addQuesThirdLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="أحمد"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>

    <View
        android:id="@id/secondSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/addQuesThirdLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input"
        android:layout_below="@id/secondSeparator" >

        <TextView
            android:id="@+id/questionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="إيهاب"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>
    <View
        android:id="@id/thirdSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/addQuesThirdLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input"
        android:layout_below="@id/thirdSeparator" >

        <TextView
            android:id="@+id/questionText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:layout_alignParentRight="true"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="أيمن"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>
    <View
        android:id="@id/secondSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/addQuesThirdLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input"
        android:layout_below="@id/secondSeparator" >

        <TextView
            android:id="@+id/questionText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:layout_alignParentRight="true"
            android:paddingTop="15.0dip"
            android:text="باسم"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>
    <View
        android:id="@id/secondSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/addQuesThirdLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input"
        android:layout_below="@id/secondSeparator" >

        <TextView
            android:id="@+id/questionText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:layout_alignParentRight="true"
            android:text="بلال"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>
</LinearLayout>