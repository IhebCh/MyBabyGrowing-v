<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/all_bg_blur" />

    <RelativeLayout
        android:id="@id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/phone_top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_background">

        <Button
            android:id="@id/topInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/phone_top_left_btn_mrgn_left"
            android:text="@string/i_btn"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@id/topHeading"
            android:layout_width="@dimen/phone_heading_width_big"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="أسئلة"
            android:textColor="#ffffffff"
            android:textSize="@dimen/heading_phone" />

        <Button
            android:id="@id/plusBtn"
            android:layout_width="@dimen/ph_top_label_width_small"
            android:layout_height="@dimen/ph_top_label_width_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/phone_top_right_btn_mrgn_right"
            android:background="@drawable/plus_icon" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@id/myQuestionsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLayout"
        android:background="@drawable/email_input">

        <TextView
            android:id="@id/nutrition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10.0dip"
            android:ellipsize="end"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:singleLine="true"
            android:text="@string/question1"
            android:textColor="#ff5a5a5a"
            android:textSize="22.0sp" />

    </RelativeLayout>

    <View
        android:id="@id/firstSeparator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/myQuestionsLayout"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@id/myQuestionsLayout_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstSeparator"
        android:background="@drawable/email_input">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10.0dip"
            android:ellipsize="end"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:singleLine="true"
            android:text="@string/question2"
            android:textColor="#ff5a5a5a"
            android:textSize="22.0sp" />
    </RelativeLayout>
    <View
        android:id="@id/secondSeparator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/myQuestionsLayout_"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@id/_myQuestionsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondSeparator"
        android:background="@drawable/email_input">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10.0dip"
            android:ellipsize="end"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:singleLine="true"
            android:text="@string/question3"
            android:textColor="#ff5a5a5a"
            android:textSize="22.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="12.0dip"
            android:layout_weight="0.0"
            android:background="@drawable/square"
            android:orientation="horizontal"
            android:showDividers="end"
            android:tabStripEnabled="false"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>